<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - JNTU College</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About Us</a></li>
                <li><a href="/administration">Administration</a></li>
                <li><a href="/academics">Academics</a></li>
                <li><a href="/awards">Awards</a></li>
                <li><a href="/directorates">Directorates</a></li>
                <li><a href="/admin/logout" class="logout-btn">Logout</a></li>
            </ul>
        </nav>
    
    <main>
        
        <h1>Admin Dashboard</h1>
        
        <section>
            <h2>Manage Users</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Verified</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.username %></td>
                            <td><%= user.email %></td>
                            <td><%= user.is_verified ? 'Yes' : 'No' %></td>
                            <td class="actions">
                                <% if (!user.is_verified) { %>
                                    <form action="/admin/verify/<%= user.id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="verify-btn">Verify</button>
                                    </form>
                                <% } %>
                                <form action="/admin/delete/<%= user.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </main>
    
    <footer>
        <p>Â© 2025 Jawaharlal Nehru Technological University. All rights reserved.</p>
    </footer>
</body>
</html>